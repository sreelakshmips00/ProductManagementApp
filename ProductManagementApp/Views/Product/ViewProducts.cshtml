@model IEnumerable<ProductManagementApp.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title>View Products</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <h1>Products List</h1>

    <table>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Color</th>
            <th>Actions</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>@product.Color</td>
                <td>
                    <a href="@Url.Action("EditProduct", "Product", new { id = product.ProductId })">Edit</a> |
                    <a href="@Url.Action("DeleteProduct", "Product", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </table>
    <button class="back" onclick="window.location.href='@Url.Action("Index", "Product")'">Back</button>


</body>
</html>
